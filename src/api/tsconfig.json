{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
